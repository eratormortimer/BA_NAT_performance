#!/bin/bash
apt-get update -y 
apt-get install linux-headers-$(uname -r) -y
apt-get install libnuma-dev -y
apt-get install libc6 -y
apt-get install libssl-dev -y
apt-get install libglib2.0-0 -y
apt-get install libdpdk-dev -y
apt-get install pciutils -y
apt-get install unzip -y
apt-get install make -y
apt-get install gcc -y
apt-get install coreutils -y
apt-get install libpcap-dev -y
apt-get install vim -y
apt-get install cmake -y
apt-get install tshark -y
apt-get install python-pip python-dev build-essential -y
apt-get install tlp tlp-rdw -y
apt-get install libcap-ng-dev -y
apt-get install libtool -y
apt-get install automake -y
apt-get install autoconf -y
apt-get install python-pyftpdlib -y
apt-get install netcat -y
apt-get install python-tftpy -y
apt-get install fuse -y
apt-get install fude-devel -y
pip install --upgrade pip
pip install six
cd /root
wget http://openvswitch.org/releases/openvswitch-2.7.0.tar.gz
tar -xvf openvswitch-2.7.0.tar.gz
